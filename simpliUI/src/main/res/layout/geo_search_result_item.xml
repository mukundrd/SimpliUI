<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/size_5dp"
    android:background="@drawable/auto_complete_result_background"
    android:paddingTop="@dimen/size_5dp">

    <TextView
        android:id="@+id/geo_search_primary_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/auto_complete_result_left_right_margin"
        android:layout_marginRight="@dimen/auto_complete_result_left_right_margin"
        android:text="Mantri Mall"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/geo_search_secondary_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/geo_search_primary_text"
        android:layout_marginLeft="@dimen/auto_complete_result_left_right_margin"
        android:layout_marginRight="@dimen/auto_complete_result_left_right_margin"
        android:text="Malleshwaram, Bangalore"
        android:textSize="14dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/geo_search_secondary_text"
        android:layout_marginTop="@dimen/size_5dp"
        android:background="#CACACA" />
</RelativeLayout>