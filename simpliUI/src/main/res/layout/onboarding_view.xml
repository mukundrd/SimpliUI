<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/up_arrow"
        android:layout_width="@dimen/onboarding_arrow_width"
        android:layout_height="@dimen/onboarding_arrow_height"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/triangle"
        android:tint="@android:color/white" />

    <FrameLayout
        android:id="@+id/message_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/up_arrow"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/onboarding_msg_bg"
        android:minHeight="40dp">

        <TextView
            android:id="@+id/onboard_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:text="content"
            android:textColor="#666666"
            android:textSize="18sp"
            android:visibility="gone" />

    </FrameLayout>

    <ImageView
        android:id="@+id/down_arrow"
        android:layout_width="@dimen/onboarding_arrow_width"
        android:layout_height="@dimen/onboarding_arrow_height"
        android:layout_below="@+id/message_holder"
        android:adjustViewBounds="true"
        android:rotation="180"
        android:scaleType="fitXY"
        android:src="@drawable/triangle"
        android:tint="@android:color/white" />

</RelativeLayout>